<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title || 'Default Title' %></title>  <!-- Default title if title isn't passed -->
  <!-- <title>Book Library</title> -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Library Management System</h1>
  <a href="/books/new">Add a New Book</a>
  <ul>
    <% books.forEach(book => { %>
      <li>
        <strong><%= book.title %></strong> by <%= book.author %> (Genre: <%= book.genre %>)
        <a href="/books/edit/<%= book.id %>">Edit</a> |
        <a href="/books/delete/<%= book.id %>">Delete</a>
      </li>
    <% }) %>
  </ul>
</body>
</html>





